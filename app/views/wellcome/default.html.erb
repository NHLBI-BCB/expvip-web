
<%= form_tag("/genes/", method: "get") do  %>
	<%= label_tag(:gene, "Gene:") %>
	<%= text_field_tag(:gene) %>
  	<%= submit_tag("Search") %>
  	<%= text_field_tag(:compare) %>
  	<%= submit_tag("Compare") %>
  	<br/>
  	Examples: Traes_5BS_0AFC3F795.1, Traes_4DS_1CF5D9107.1
  	<h2>Select studies to dislay:</h2>
  	<% @studies.each do |study| %>
	   <%= check_box_tag("studies[]", study.accession, checked = true) %>
	   <%= label_tag(study.accession, study.title) %>
	   <br/>
	<% end %>
<% end %>